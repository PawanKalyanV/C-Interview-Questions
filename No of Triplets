/* To find the no of triplets */

#include<stdio.h>
int main()
{
  int N, i, j=1, n, p=0, T;
  printf( "Enter the N value: " );
  scanf( "%d",&N );
  int arr[n];
  printf( "Enter an array:" );
  scanf( "%d", arr[n] );
  for( i=0; i< n-1 ; i++ )
  {
    if( p != arr[n] )
    {
      p = arr[i] + arr[i+j];
      j++;
    }
    else
    {
      T++;
    }
    printf( "The total no of triplets %d", T );

   }return 0;

}
